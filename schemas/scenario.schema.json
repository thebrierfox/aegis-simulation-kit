{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Scenario",
  "type": "object",
  "properties": {
    "id": {"type": "string"},
    "description": {"type": "string"},
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "desc": {"type": "string"},
          "type": {"type": "string", "enum": ["internal", "external"]}
        },
        "required": ["id", "desc", "type"]
      }
    }
  },
  "required": ["id", "description", "steps"]
}
